<Window x:Class="LogAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LogAnalyzer.Util"
        xmlns:l="clr-namespace:LogAnalyzer.Filters"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
        xmlns:c="clr-namespace:LogAnalyzer"
        Title="MainWindow" Height="550" Width="825">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Filepath}" VerticalAlignment="Center" Margin="5"/>
            <Button Grid.Column="1" Margin="5" Click="Open_Click">Open</Button>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBlock Text="Lines to show: " Margin="10 0 20 0" FontWeight="Bold"></TextBlock>
                <TextBox Text="{Binding LinesToShow}" Width="100" />
                <Button Margin="10 0 0 0" Click="RefreshUILines_Click">Refresh</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Regex:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="regText" Grid.Column="1" Margin="5" Text="{Binding Regex}" TextChanged="TextBox_TextChanged"></TextBox>
            <Button Grid.Column="2" Margin="5" Click="AddFilter_Click">Add</Button>
            <Button Grid.Column="3" Margin="5" Click="Update_Click">Update</Button>
        </Grid>
        <Expander Grid.Row="2" Header="Filters" IsExpanded="False">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="45" />

                    </Grid.ColumnDefinitions>
                    <TextBlock FontWeight="Bold" Grid.Column="0">Name</TextBlock>
                    <TextBlock FontWeight="Bold" Grid.Column="1">Regex</TextBlock>
                    <TextBlock FontWeight="Bold" Grid.Column="2">Type</TextBlock>
                    <TextBlock FontWeight="Bold" Grid.Column="3">Display</TextBlock>

                </Grid>

                <ListView ItemsSource="{Binding Filters}"
                          SelectionChanged="ListView_Selected"
                          >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="300" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="45" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding Name}" Tag="{Binding}" GotFocus="TextBox_GotFocus" TextChanged="FilterName_TextChanged"></TextBox>
                                <TextBox Grid.Column="1" Text="{Binding Regex}" TextChanged="FilterRegex_TextChanged"></TextBox>
                                <ComboBox Grid.Column="2" SelectedItem="{Binding FilterType, Mode=TwoWay}"  SelectionChanged="FilterType_SelectionChanged"
                                 local:EnumUtil.Enum="{x:Type l:FilterType}"></ComboBox>
                                <CheckBox Grid.Column="3" IsChecked="{Binding ToDisplay}" Click="FilterDisplayCheckboxClicked_Click"></CheckBox>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Width="150" HorizontalAlignment="Left" Margin="5" Padding="3" IsEnabled="{Binding FiltersHaveChanged}" Click="SaveChanges_Click">Save Changes</Button>
            </StackPanel>
            <!--<Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date time:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" Margin="5" Text="{Binding DateTimeRegex}"></TextBox>
            </Grid>-->
        </Expander>
        <Expander Grid.Row="3" Header="Sessions" IsExpanded="True">
            <StackPanel>
                <Button Margin="10" Padding="5" HorizontalAlignment="Left" Click="SaveSession_Click">Save Current Session</Button>
                <ItemsControl ItemsSource="{Binding Sessions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="5" Text="{Binding DateString}" Grid.Column="0"/>
                                <TextBlock Margin="5" Text="{Binding Filepath}" Grid.Column="1"/>
                                <TextBlock Margin="5" Text="{Binding FiltersString}" Background="LightGray" Grid.Column="2"/>
                                <Button Grid.Column="3" Margin="5" Click="DeleteSession_Click" Tag="{Binding}">Delete</Button>
                                <Button Grid.Column="4" Margin="5" Click="ImportSession_Click" Tag="{Binding}">Import</Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Expander>
        <Expander Grid.Row="4" Header="Export">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="5" Padding="5" HorizontalAlignment="Left" Click="PrintResults_Click">Print Results</Button>
                    <Button Margin="5" Padding="5" HorizontalAlignment="Left" Click="Export_Click">Export</Button>
                </StackPanel>
            </StackPanel>
        </Expander>
        <Expander Grid.Row="5" Header="Chart Builder" IsExpanded="True">
            <StackPanel>
            <c:ChartBuilder x:Name="ChartBuilder"></c:ChartBuilder>
            <Button Margin="5" Padding="5" HorizontalAlignment="Left" Click="Chart_Click">Chart</Button>
            </StackPanel>
        </Expander>
        <Expander Header="TextView" Grid.Row="6" IsExpanded="True">
            <ScrollViewer  Margin="5">
                <ItemsControl ItemsSource="{Binding UILines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock FontFamily="Courier" Text="{Binding}" FontSize="12"></TextBlock>
                                <ItemsControl ItemsSource="{Binding Highlights}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Rectangle Width="{Binding Path=GetRectangle.Width}" Height="{Binding Path=GetRectangle.Height}" HorizontalAlignment="Left"
                                   Fill="{Binding Path=GetRectangle.Fill}" Opacity="{Binding Path=GetRectangle.Opacity}" Margin="{Binding Path=GetRectangle.Margin}"></Rectangle>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"></StackPanel>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Expander>
    </Grid>
</Window>
